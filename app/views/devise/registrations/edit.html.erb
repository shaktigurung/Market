<div class="container">
  <div class="message">
<div class="row">
<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: :true }) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
  <div class="profile_image">
    <% if current_user.image.url.present? %>
        <%= image_tag(current_user.image.url)  %>
        <%= f.label :remove_image do %>
            <%= link_to "Remove Image", user_path(@user.id), method: :delete %>
        <% end %>
            <% @user.save %>
      <% end %>
      <%= f.file_field :image   %>
      <%= f.hidden_field :image_cache %>
  </div>
</div>

  <div class="form-group">
    <%= f.label :username %><br />
    <%= f.text_field :user_name, autofocus: true, autocomplete: "first_name" ,class:"form-control"%>
  </div>

  <div class="form-group">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name",class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name",class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description,class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <divclass="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" , class:"form-control"%>
 
    <%= f.fields_for :addresses do |t| %>
      <%= t.label "Street Number"%>
      <%= t.text_field :home_number, class: "form-control" %>
    
      <%= t.label "Street Name"%>
      <%= t.text_field :street_name, class: "form-control" %>
    
      <%= t.label "City"%>
      <%= t.text_field :suburb , class: "form-control"%>
    
      <%= t.label "Country"%>
      <%= t.text_field :country, class: "form-control" %>
    
      <%= t.label "Postcode"%>
      <%= t.text_field :postcode, class: "form-control" %>
   

  <% end %>
  <div>

  <div class="form-group">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class:"submit" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete , class: "submit"%></p>

<%= link_to "Back", :back , class:"btn btn-success" %>
 </div>
 </div>
</div>