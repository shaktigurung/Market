<div class= "container">
    <div class= "row">
        <div class= "banner">
            <h1>Welcome to <i class="fab fa-monero"></i> Market </h1>
            <h2>A perfect place to buy and sell your goods</h2>
            <%= image_tag("banner/mainbanner.jpg", :class => "bannerimage") %>  
        </div>
    </div> 
    
    <div class = "row">
            <div class="col-md-12">
                    <% @products.reverse.each do |product| %>
                    <div class="col-xs-12 col-sm-6 col-md-3">                                
                        <%= render 'products/thumb', result: product %>
                        <% if user_signed_in? && current_user.id %> 
                            <%= form_tag charges_path do %>
                                <article>
                                    <% if flash[:error].present? %>
                                    <div id="error_explanation">
                                        <p><%= flash[:error] %></p>
                                    </div>
                                    <% end %><br>
                                    <label class="amount">
                                    <span> Price: $<%= (product.price).to_i %></span>
                                    </label>
                                    <input type="hidden" value="<%= product.id %>" name="product_id">
                                </article>

                                <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                                            data-key="<%= Rails.application.credentials.stripe[:PUBLISHABLE_KEY] %>"
                                                            data-description=" What a buy !!! <%= current_user.first_name %>"
                                                            data-label= "Buy now"
                                                            data-email="<%= current_user.email %>"
                                                            data-amount="<%= ((product.price)*100) %>"
                                                            data-locale="auto">
                                </script>
                            <% end %> 
                            <% else %>
                            <%= link_to 'Show', product %><br>
                            <%= link_to 'Buy', root_path %><br>
                        <% end %>
                        <%= link_to 'Show', product %><br>
                         <%#= link_to 'Show', product %><br>
                        <%#= button_to "Buy ",new_charge_path(product: product.id), method: :get, class: "btn-primary" %>
                        <%#= link_to 'Buy', show_charge_path, class: "btn-primary" %><br> 
                    </div>
                    <% end %>
            </div>
    </div>
</div>