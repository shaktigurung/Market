<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Condition</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= image_tag product.product_images[0].image_url(:thumb)%></td> <%#TODO: Optional iamges%>
        <td><%= product.quantity %></td>
        <td>$<%= product.price %></td>
        <td><%= product.condition %></td>
        <td><%= link_to "Buy ",new_charge_path(product: product.id) %></td>
        <td><%= link_to 'Show', product %></td>
        <% if user_signed_in? && current_user.id == product.id %>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
