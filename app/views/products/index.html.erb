<div class= "container">
  <div class ="product">
    <div class="row">
      <h3><%= link_to 'Add New Product', new_product_path %></h3>
        <h2> Current List of Products </h2>
        <% @products.reverse.each do |product| %>
        <div class="col-xs-12 col-sm-6 col-md-3">
            <% unless product.product_images.empty? %>
              <%= image_tag product.product_images[0].image_url(:thumb)%>
              <% else %>
              <%= image_tag ActionController::Base.helpers.asset_path("default.jpg") %>
            <% end  %> <%#TODO: Optional iamges%>
            <h4><%= product.name.titleize %></h4>
            <p> <%= product.description %></p>
            <p class ="amount"> Price: $<%= product.price %></p>
            <%= link_to "Buy ",new_charge_path(product: product.id) %>
            <%= link_to 'Show', product %></td>
            <% if user_signed_in? && current_user.id == product.id %>
              <%= link_to 'Edit', edit_product_path(product) %>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
            </div>
        <% end %>
      </div>
    </div>
</div>


